<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FragmentPlayerText">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingHorizontal">4dp</item>
    </style>

    <style name="FragmentPlayerText.TracksName">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FragmentPlayerText.ArtistsName">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/transparent_black</item>
    </style>

    <style name="FragmentPlayerButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="layout_constraintDimensionRatio">w, 1:1</item>
    </style>
</resources>